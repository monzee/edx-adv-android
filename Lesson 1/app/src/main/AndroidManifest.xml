<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.galileo.android.androidchat" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidChatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="em.zed.androidchat.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="em.zed.androidchat.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name="em.zed.androidchat.talk.TalkActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".login.ui.LoginActivity"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".contactlist.ui.ContactListActivity"
            android:label="@string/contactlist.title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".chat.ui.ChatActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
